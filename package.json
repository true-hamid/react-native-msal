{
  "name": "react-native-msal",
  "version": "1.0.3",
  "description": "React Native wrapper for iOS, Android and Windows",
  "main": "lib/commonjs/index.js",
  "module": "lib/module/index.js",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index.ts",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "android",
    "ios",
    "windows",
    "reactnativemsal.podspec",
    "!lib/typescript/example"
  ],
  "scripts": {
    "test": "jest",
    "typescript": "tsc --noEmit",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "prepare": "bob build && husky install",
    "example": "yarn --cwd example",
    "pods": "cd example && npx pod-install",
    "bootstrap": "yarn example && yarn && yarn pods",
    "predeploy": "yarn example build:web",
    "deploy": "gh-pages -d example/web-build",
    "windows": "react-native run-windows"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/stashenergy/react-native-msal",
  "author": "Stash Energy <dev@stash.energy> (https://stash.energy)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stashenergy/react-native-msal/issues"
  },
  "homepage": "https://github.com/stashenergy/react-native-msal#readme",
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@react-native-community/eslint-config": "^2.0.0",
    "@types/jest": "^26.0.23",
    "@types/react": "^17.0.5",
    "@types/react-native": "^0.64.5",
    "eslint": "^7.26.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "gh-pages": "^3.1.0",
    "husky": "^6.0.0",
    "jest": "^26.4.2",
    "metro-react-native-babel-preset": "^0.66.0",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-native": "^0.64.1",
    "react-native-builder-bob": "^0.18.1",
    "react-native-windows": "^0.64.9",
    "semantic-release": "^17.4.2",
    "typescript": "^4.2.4"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "jest": {
    "preset": "react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example/node_modules",
      "<rootDir>/lib/"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@react-native-community",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false,
          "printWidth": 120
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "lib/",
    "example/web-build"
  ],
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false,
    "printWidth": 120
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      "typescript"
    ]
  },
  "dependencies": {
    "@azure/msal-browser": "^2.1.0"
  }
}
